<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.feedingindia_admin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FeedingIndiaAdmin">
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".TrustedDonor"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".CharityAllCommentsByDonor"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".EditDonorAllDetails"
            android:parentActivityName=".DonorList" />
        <activity
            android:name=".EditCharityPostRequirementsDetails"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".CharityPostRequirementsDetails"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".EditCharityAllDetails"
            android:parentActivityName=".CharityList" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".AddDonor"
            android:parentActivityName=".AddUserSelection" />
        <activity
            android:name=".AddCharity"
            android:parentActivityName=".AddUserSelection"
            tools:ignore="MissingClass" />
        <activity
            android:name=".DonorDescription"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".AddUserSelection"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CharityDescription"
            android:parentActivityName=".CharityList" />
        <activity android:name=".RegisterPage" />
        <activity
            android:name=".CharityList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DonorList"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".splash_screen_admin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>