<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.feedingindia_admin">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FeedingIndiaAdmin">
        <activity
            android:name=".EditCharityAllDetails"
            android:parentActivityName=".CharityDescription" />
        <activity
            android:name=".AddDonor"
            android:parentActivityName=".AddUserSelection" />
        <activity
            android:name=".AddCharity"
            android:parentActivityName=".AddUserSelection" />
        <activity
            android:name=".DonorDescription"
            android:parentActivityName=".CharityList" />
        <activity
            android:name=".AddUserSelection"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CharityDescription"
            android:parentActivityName=".CharityList" />
        <activity android:name=".RegisterPage" />
        <activity
            android:name=".CharityList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DonorList"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".LoginPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>